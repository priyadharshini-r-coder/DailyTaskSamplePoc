<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <shape>
            <solid android:color="@color/colorTrasparent"/>
            <stroke android:color="@color/colorAccent"
                    android:width="@dimen/margin_1" />
            <corners android:radius="@dimen/margin_1"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_window_focused="true">
        <shape>
            <solid android:color="@color/colorTrasparent"/>
            <stroke android:color="@color/gray_400"
                    android:width="@dimen/margin_1"/>
            <corners android:radius="@dimen/margin_1"/>
        </shape>
    </item>
</selector>