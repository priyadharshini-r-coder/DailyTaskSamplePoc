<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_chat_popup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_15"
        android:paddingEnd="@dimen/margin_20"
        android:layout_gravity="center_vertical"
        android:background="@drawable/chat_mark_as_urgent_popup_bubble">

        <LinearLayout
            android:id="@+id/ll_mark_as_urgent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_weight="2">
            <ImageView

                android:contentDescription="@string/mark_as_urgent"
                android:id="@+id/img_mark_as_urgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/ic_star_outline_24" />

            <TextView
                android:id="@+id/txtMarkAsUrgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/sub_title_color"
                android:textSize="@dimen/btn_text_size"
                android:text="@string/mark_as_urgent"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_5"
                >

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_view_details"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="visible"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/img_view_details"
                android:contentDescription="@string/view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@drawable/ic_info_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_5"
                android:gravity="start"
                android:text="@string/view_details"
                android:textColor="@color/sub_title_color"
                android:textSize="@dimen/btn_text_size"
                >

            </TextView>
        </LinearLayout>
    </LinearLayout>
