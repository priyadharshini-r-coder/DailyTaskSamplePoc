<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_20">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_rectangle" />

                    </LinearLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/products_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_30"
                        android:background="@color/bg_gray">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/txtTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/eConsult_details"
                                android:textColor="@color/text_ash"
                                android:textSize="@dimen/text_size" />

                            <ImageButton
                                android:id="@+id/imgCancel"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                app:srcCompat="@drawable/ic_cancel" />

                        </RelativeLayout>

                    </androidx.appcompat.widget.Toolbar>

                    <RelativeLayout
                        android:id="@+id/status_stub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2"
                        android:paddingHorizontal="@dimen/margin_20">

                        <TextView
                            android:id="@+id/txtPatientName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:paddingHorizontal="@dimen/margin_8"
                            android:text="Name"
                            android:textColor="@color/bg_blue"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_profile_icon"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtAge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_weight="0.8"
                            android:gravity="center|start"
                            android:text="Age"
                            android:textColor="@color/sub_title_color"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_location"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_weight="0.8"
                            android:gravity="center|start"
                            android:text="Location"
                            android:textColor="@color/sub_title_color"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:background="@drawable/ic_mrn"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtMRNNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_weight="0.8"
                            android:gravity="center|start"
                            android:text="MRN"
                            android:textColor="@color/sub_title_color"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginTop="@dimen/margin_2"
                            android:background="@drawable/ic_urgency"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtComplaint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_weight="0.8"
                            android:gravity="center|start"
                            android:maxLines="3"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:scrollbarThumbVertical="@color/gray_400"
                            android:scrollbarTrackVertical="@color/gray_250"
                            android:scrollbars="vertical"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                            android:textColor="@color/sub_title_color"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_30"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/bg_gray"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/vitals"
                            android:textColor="@color/text_ash"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_8">

                        <ViewStub
                            android:id="@+id/layout_stub_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inflatedId="@+id/vital_layout" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/margin_4"
                        android:paddingVertical="@dimen/margin_2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:background="@drawable/ic_timer"
                            android:gravity="center|start"
                            android:padding="@dimen/margin_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginLeft="@dimen/margin_8"
                            android:gravity="center|start"
                            android:text="@string/updated_at"
                            android:textColor="@color/text_ash"
                            android:textSize="@dimen/text_size_xsmall" />

                        <TextView
                            android:id="@+id/txtTimeZone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="@dimen/margin_1"
                            android:layout_marginLeft="@dimen/margin_1"
                            android:gravity="center|start"
                            android:text="Timezone"
                            android:textColor="@color/text_ash"
                            android:textSize="@dimen/text_size_xsmall" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llButtonView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_2"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/llMessage"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_30"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_4"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgMessageAlert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_message_alert"
                                android:gravity="center"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txtMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_30"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/margin_2"
                                android:gravity="center"
                                android:text="@string/messages"
                                android:textColor="@color/bg_blue"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txteConsult"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_30"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_4"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_blue"
                            android:gravity="center"
                            android:text="@string/econsult_chart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llViewDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:padding="@dimen/margin_2"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtViewDetails"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_30"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_4"
                            android:background="@drawable/bg_button_blue"
                            android:gravity="center"
                            android:text="@string/view_details"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_30"
                        android:layout_gravity="center|bottom"
                        android:gravity="center|bottom"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_line_black" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </ScrollView>
    </LinearLayout>
</layout>