<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_bg"
    android:minWidth="@dimen/margin_150"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_custom_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_dialog_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/id_custom_dialog_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/id_custom_dialog_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="center|left"
            android:textAlignment="center"
            android:minHeight="60dp"
            android:text="Co0nsultation request already acepted by someo=ne else"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/text_size" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_custom_dialog_negative_btn"
                fontPath="fonts/FiraSans-Book.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_negative_btn_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:visibility="gone"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/id_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_300"
                android:visibility="gone" />

            <Button
                android:id="@+id/id_custom_dialog_positive_btn"
                fontPath="fonts/FiraSans-Book.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_positive_btn_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/ok"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:visibility="gone"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>