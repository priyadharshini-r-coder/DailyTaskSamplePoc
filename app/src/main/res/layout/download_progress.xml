<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_percent"
                fontPath="fonts/FiraSans-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/gray_800"
                android:textSize="@dimen/text_size_xsmall"
                tools:ignore="MissingPrefix" />

            <ProgressBar
                android:id="@+id/id_progress"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/download_progress_bg"
                android:indeterminateDrawable="@drawable/download_progress_bg" />
        </FrameLayout>

        <TextView
            android:id="@+id/id_pb_txt"
            fontPath="fonts/FiraSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/image_uploading_pb_msg"
            android:textColor="@color/gray_800"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/gray_400"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="35dp"
        android:text="@string/cancel"
        android:textAllCaps="true"
        android:textColor="@color/gray_800"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>