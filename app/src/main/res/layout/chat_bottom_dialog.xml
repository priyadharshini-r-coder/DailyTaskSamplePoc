<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@drawable/rect_circular_drawable_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_document_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/chat_icon_background_drawable_bg"
                android:padding="14dp"
                app:srcCompat="@drawable/doc_icon_selector_bg" />

            <TextView
                android:id="@+id/id_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/document"
                android:textColor="@drawable/primary_text_selector_bg"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_camera_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/chat_icon_background_drawable_bg"
                android:padding="16dp"
                app:srcCompat="@drawable/camera_icon_selector_bg" />

            <TextView
                android:id="@+id/id_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/camera"
                android:textColor="@drawable/primary_text_selector_bg"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/id_gallery_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/chat_icon_background_drawable_bg"
                android:padding="16dp"
                app:srcCompat="@drawable/gallery_icon_selector_bg" />

            <TextView
                android:id="@+id/id_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/gallery"
                android:textColor="@drawable/primary_text_selector_bg"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_video_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/chat_icon_background_drawable_bg"
                android:padding="12dp"
                app:srcCompat="@drawable/video_icon_selector_bg" />

            <TextView
                android:id="@+id/id_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/video"
                android:textColor="@drawable/primary_text_selector_bg"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_voice_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                android:background="@drawable/chat_icon_background_drawable_bg"
                android:padding="14dp"
                app:srcCompat="@drawable/audio_icon_selector_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.3"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/audio"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/id_location_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:background="@drawable/chat_icon_background_drawable_bg"
                android:padding="14dp"
                app:srcCompat="@drawable/location_icon_selector_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.3"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/location"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>